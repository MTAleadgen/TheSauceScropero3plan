{
  "compilerOptions": {
    "target": "ESNext",                       // Or "ES2020", "ES2021", etc., depending on your Node version
    "module": "ESNext",                       // Use ES module system
    "moduleResolution": "node",               // How modules get resolved (classic Node.js way)
    "esModuleInterop": true,                  // Enables compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforces consistent file casing
    "strict": true,                           // Enables all strict type-checking options
    "skipLibCheck": true,                     // Skip type checking of all declaration files (*.d.ts)
    "outDir": "./dist",                       // Optional: if you plan to compile TS to JS
    "resolveJsonModule": true,                // Allows importing JSON files
    "allowSyntheticDefaultImports": true,     // Allow default imports from modules with no default export
    // If you have specific paths for Drizzle or other modules (usually not needed if node_modules is standard)
    // "baseUrl": ".",
    // "paths": {
    //   "*": ["node_modules/*"]
    // }
  },
  "include": [
    "src/**/*.ts",                           // Include all .ts files in the src directory
    "drizzle.config.ts"                    // Include your Drizzle config file
  ],
  "exclude": [
    "node_modules",
    "dist"                                    // If you use an outDir
  ]
} 